		pass
		{
			vertex_program_ref Examples_Shadows_pssm_glsl_vs
			{
			}

			fragment_program_ref Examples_Shadows_pssm_glsl_ps
			{
			}
			
			texture_unit
			{
				texture_alias DiffuseTex
			}

			texture_unit
			{
