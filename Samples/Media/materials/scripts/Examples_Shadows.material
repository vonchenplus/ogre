material Examples_Shadows
{
	technique
	{
		shadow_caster_material Examples_Shadows_Caster

		pass
		{
			vertex_program_ref Examples_Shadows_glsl_vs
			{
			}

			fragment_program_ref Examples_Shadows_glsl_ps
			{
			}

			texture_unit
			{
				texture_alias DiffuseTex
			}

			texture_unit
			{
				content_type shadow
				tex_address_mode border
				tex_border_colour 1 1 1 1
			}
		}
	}
}

material Examples_Shadows_pssm
{
	technique
