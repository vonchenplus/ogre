compositor_node TEST_Node
{
	in 0 rt_renderwindow

	target rt_renderwindow
	{
		pass clear
		{
			colour_value 0.7 0.3 0.1
		}
		pass render_scene
		{
			shadows				TEST_ShadowNode
		}
	}
}

abstract shadow_map shadow_map_target
{
	pass clear
	{
		colour_value 1 1 1 1
	}

	pass render_scene {}
}

compositor_node_shadow TEST_ShadowNode
{
	technique pssm
	num_splits					3
	pssm_lambda                 0.50

	shadow_map 0 2048 2048 PF_FLOAT32_R light 0 split 0 depth_pool 2
	shadow_map 1 1024 1024 PF_FLOAT32_R light 0 split 1 depth_pool 2
	shadow_map 2 1024 1024 PF_FLOAT32_R light 0 split 2 depth_pool 2

	technique focused

	shadow_map 3 1024 1024 PF_FLOAT32_R light 1 depth_pool 2
	shadow_map 4 1024 1024 PF_FLOAT32_R light 2 depth_pool 2
	shadow_map 5 1024 1024 PF_FLOAT32_R light 3 depth_pool 2
	shadow_map 6 1024 1024 PF_FLOAT32_R light 4 depth_pool 2

	shadow_map 0 1 2 3 4 5 6 : shadow_map_target {}
}


workspace TESTWorkspace
{
	connect_output TEST_Node 0
}
