//---------------------------------------------------------------------------------------
//  GLSL
//---------------------------------------------------------------------------------------
vertex_program TEST_ShadowsCaster_vs glsl
{
	source TEST_Example_ShadowsVp.glsl

	default_params
	{
		param_named_auto	worldViewProj		worldviewproj_matrix
		param_named_auto	depthRange0			scene_depth_range
		param_named			shadowConstantBias	float 0.001
	}
}

fragment_program TEST_ShadowsCaster_ps glsl
{
	source TEST_Example_ShadowsCasterFp.glsl
}

vertex_program TEST_vs glsl
{
	source Output_vs.glsl

	default_params
	{
		param_named_auto	worldViewProj		worldviewproj_matrix
		param_named_auto	worldView			worldview_matrix

		param_named_auto	shadowDepthRange	shadow_scene_depth_range_array	7
		param_named_auto	texWorldViewProj	texture_worldviewproj_matrix_array	7
	}
}

fragment_program TEST_ps glsl
{
	source Output_ps.glsl

	default_params
	{
		//param_named_auto	invShadowMapSize	inverse_texture_size_array	7
		param_named_auto	lightPosition		light_position_view_space_array 5
		param_named_auto	lightDiffuse		light_diffuse_colour_array 5
		param_named_auto	lightSpecular		light_specular_colour_array 5

		param_named			roughness			float 0.85
		param_named			F0					float 0.818

		param_named			kD					float3 0.079577472 0.079577472 0.079577472
		param_named			kS					float3 1 1 1

		param_named			pssmSplitPoints		float3 0 0 0

		param_named			texShadowMap		int7 0 1 2 3 4 5 6
		//param_named			texShadowMap		int7 1 2 3 4 5 6 7

		param_named			texEnvProbeMap		int 7
		param_named_auto	invViewMat			inverse_view_matrix
	}
}
